{
  if (!isInnerClass(declaration)) {
    return;
  }
  if (isStaticClass(declaration)) {
    return;
  }
  if (hasLooperConstructorParameter(cls)) {
    return;
  }
  Node locationNode=node instanceof ClassDeclaration ? ((ClassDeclaration)node).astName() : node;
  Location location=context.getLocation(locationNode);
  context.report(ISSUE,location,String.format("This Handler class should be static or leaks might occur (%1$s)",cls.getName()));
}
