{
  if (relPath.startsWith("/")) {
    return new File(relPath);
  }
  File parentFile=baseFile.getParentFile();
  String name;
  if (parentFile == null) {
    name=".";
  }
 else {
    name=parentFile.getPath().replace(File.separatorChar,'/');
  }
  name=URI.create(name + "/" + relPath).normalize().getPath();
  return new File(name);
}
