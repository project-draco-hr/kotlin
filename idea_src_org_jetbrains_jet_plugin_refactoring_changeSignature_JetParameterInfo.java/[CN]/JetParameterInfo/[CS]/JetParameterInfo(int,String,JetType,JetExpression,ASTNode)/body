{
  this.oldIndex=oldIndex;
  this.name=name;
  this.type=type;
  this.typeText=getOldTypeText();
  this.defaultValue=defaultValue;
  if (valOrVar == null)   this.valOrVar=JetValVar.None;
 else   if (valOrVar.getElementType() == JetTokens.VAL_KEYWORD)   this.valOrVar=JetValVar.Val;
 else   if (valOrVar.getElementType() == JetTokens.VAR_KEYWORD)   this.valOrVar=JetValVar.Var;
 else   throw new IllegalArgumentException("Unknown val/var token: " + valOrVar.getText());
}
