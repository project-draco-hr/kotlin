{
  Document document=statement.getContainingFile().getViewProvider().getDocument();
  if (document != null) {
    TextRange textRange=statement.getTextRange();
    int lineNumber=document.getLineNumber(markEndOffset ? textRange.getEndOffset() : textRange.getStartOffset());
    if (lineNumber == myLastLineNumber) {
      return;
    }
    myLastLineNumber=lineNumber;
    Label label=new Label();
    v.visitLabel(label);
    v.visitLineNumber(lineNumber + 1,label);
  }
}
