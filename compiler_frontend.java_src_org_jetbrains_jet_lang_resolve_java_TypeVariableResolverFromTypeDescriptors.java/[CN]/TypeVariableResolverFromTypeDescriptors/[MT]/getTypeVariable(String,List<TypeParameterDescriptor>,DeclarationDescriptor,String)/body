{
  for (  TypeParameterDescriptor typeParameter : typeParameters) {
    if (typeParameter.getName().equals(name)) {
      return typeParameter;
    }
  }
  DeclarationDescriptor containingDeclaration=owner.getContainingDeclaration();
  if (containingDeclaration != null) {
    return getTypeVariable(name,TypeVariableResolvers.getTypeParameterDescriptors((ClassOrNamespaceDescriptor)containingDeclaration),containingDeclaration,context);
  }
  throw new RuntimeException("type parameter not found by name '" + name + "' in "+ context);
}
