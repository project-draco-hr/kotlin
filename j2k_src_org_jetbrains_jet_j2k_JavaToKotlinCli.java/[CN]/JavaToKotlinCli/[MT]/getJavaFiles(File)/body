{
  List<File> result=new ArrayList<File>();
  if (start.isFile())   return Arrays.asList(start);
  for (  File file : Arrays.asList(start.listFiles())) {
    if ((file.isFile() && file.getName().endsWith(".java")) || file.isDirectory())     result.add(file);
    if (file.isDirectory()) {
      List<File> deeperList=getJavaFiles(file);
      result.addAll(deeperList);
    }
  }
  return result;
}
