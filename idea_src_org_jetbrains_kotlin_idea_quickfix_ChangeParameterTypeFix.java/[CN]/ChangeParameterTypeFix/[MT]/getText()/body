{
  String renderedType=IdeDescriptorRenderers.SOURCE_CODE_SHORT_NAMES_IN_TYPES.renderType(type);
  return isPrimaryConstructorParameter ? JetBundle.message("change.primary.constructor.parameter.type",getElement().getName(),containingDeclarationName,renderedType) : JetBundle.message("change.function.parameter.type",getElement().getName(),containingDeclarationName,renderedType);
}
