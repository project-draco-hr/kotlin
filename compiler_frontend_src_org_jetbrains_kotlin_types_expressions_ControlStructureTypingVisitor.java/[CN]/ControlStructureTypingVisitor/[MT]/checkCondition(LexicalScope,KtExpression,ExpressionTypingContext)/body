{
  if (condition != null) {
    JetTypeInfo typeInfo=facade.getTypeInfo(condition,context.replaceScope(scope).replaceExpectedType(components.builtIns.getBooleanType()).replaceContextDependency(INDEPENDENT));
    KtType conditionType=typeInfo.getType();
    if (conditionType != null && !components.builtIns.isBooleanOrSubtype(conditionType)) {
      context.trace.report(TYPE_MISMATCH_IN_CONDITION.on(condition,conditionType));
    }
    return typeInfo.getDataFlowInfo();
  }
  return context.dataFlowInfo;
}
