{
  PsiElement parent=declaration.getParent();
  if (parent instanceof JetFile)   return false;
  if (parent instanceof JetClassBody && parent.getParent() instanceof JetClass) {
    return declaration.hasModifier(JetTokens.ABSTRACT_KEYWORD) || declaration.hasModifier(JetTokens.OPEN_KEYWORD) || declaration.hasModifier(JetTokens.OVERRIDE_KEYWORD)|| ((JetClass)parent.getParent()).isTrait();
  }
  return false;
}
