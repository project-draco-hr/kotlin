{
  KotlinType smartCast=bindingContext.get(SMARTCAST,expression);
  if (smartCast != null) {
    holder.createInfoAnnotation(expression,"Smart cast to " + DescriptorRenderer.FQ_NAMES_IN_TYPES.renderType(smartCast)).setTextAttributes(JetHighlightingColors.SMART_CAST_VALUE);
  }
  super.visitExpression(expression);
}
