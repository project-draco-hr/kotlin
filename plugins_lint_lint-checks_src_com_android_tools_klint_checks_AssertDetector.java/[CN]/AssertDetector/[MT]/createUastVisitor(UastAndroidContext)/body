{
  return new UastVisitor(){
    @Override public boolean visitCallExpression(    @NotNull UCallExpression node){
      if (!(node instanceof JavaUAssertExpression)) {
        return true;
      }
      if (node.getValueArgumentCount() < 1) {
        return true;
      }
      if (!context.getLintContext().getMainProject().isAndroidProject()) {
        return true;
      }
      UExpression assertion=node.getValueArguments().get(0);
      if (assertion instanceof ULiteralExpression) {
        ULiteralExpression literal=(ULiteralExpression)assertion;
        if (literal.isBoolean()) {
          Boolean b=((Boolean)literal.getValue());
          if (b != null && b) {
            return false;
          }
        }
      }
 else {
        if (isNullCheck(assertion)) {
          return false;
        }
      }
      String message="Assertions are unreliable. Use `BuildConfig.DEBUG` conditional checks instead.";
      context.report(ISSUE,node,context.getLocation(node),message);
      return false;
    }
  }
;
}
