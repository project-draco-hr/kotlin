{
  this.editor=editor;
  if (editor != null) {
    modificationStamp=editor.getDocument().getModificationStamp();
    startOffset=editor.getSelectionModel().getSelectionStart();
    endOffset=editor.getSelectionModel().getSelectionEnd();
    VirtualFile vFile=((EditorEx)editor).getVirtualFile();
    if (vFile == null) {
      jetFile=null;
    }
 else {
      PsiFile psiFile=PsiManager.getInstance(project).findFile(vFile);
      jetFile=psiFile instanceof KtFile ? (KtFile)psiFile : null;
    }
  }
 else {
    modificationStamp=0;
    startOffset=0;
    endOffset=0;
    jetFile=null;
  }
}
