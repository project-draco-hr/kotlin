{
  final String newSignature=editor.getDocument().getText();
  if (!previousSignature.equals(newSignature)) {
    new WriteCommandAction(project){
      @Override protected void run(      final Result result) throws Throwable {
        ExternalAnnotationsManager.getInstance(project).editExternalAnnotation(method,KotlinSignatureInJavaMarkerProvider.KOTLIN_SIGNATURE_ANNOTATION,signatureToNameValuePairs(project,newSignature));
      }
    }
.execute();
  }
  balloon.hide();
}
