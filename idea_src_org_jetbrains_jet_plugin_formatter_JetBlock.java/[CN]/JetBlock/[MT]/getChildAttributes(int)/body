{
  final IElementType type=getNode().getElementType();
  if (CODE_BLOCKS.contains(type) || type == JetNodeTypes.WHEN || type == JetNodeTypes.IF || type == JetNodeTypes.FOR || type == JetNodeTypes.WHILE || type == JetNodeTypes.DO_WHILE) {
    return new ChildAttributes(Indent.getNormalIndent(),null);
  }
 else   if (type == JetNodeTypes.DOT_QUALIFIED_EXPRESSION) {
    return new ChildAttributes(Indent.getContinuationWithoutFirstIndent(),null);
  }
  return super.getChildAttributes(newChildIndex);
}
