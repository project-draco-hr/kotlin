{
  DeclarationDescriptor descriptorForName=descriptor instanceof ConstructorDescriptor ? descriptor.getContainingDeclaration() : descriptor;
  String name=descriptorForName.getName().asString();
  String paramTypes=StringUtil.join(descriptor.getValueParameters(),new Function<ValueParameterDescriptor,String>(){
    @Override public String fun(    ValueParameterDescriptor descriptor){
      return DescriptorRenderer.SHORT_NAMES_IN_TYPES.renderType(descriptor.getType());
    }
  }
,", ");
  return name + "(" + paramTypes+ ")";
}
