{
  if (file1 != null && file2 != null && file1.getName().equals(file2.getName())) {
    File parent1=file1.getParentFile();
    File parent2=file2.getParentFile();
    if (parent1 != null && parent2 != null && parent1.getName().equals(parent2.getName())) {
      return true;
    }
  }
  return false;
}
