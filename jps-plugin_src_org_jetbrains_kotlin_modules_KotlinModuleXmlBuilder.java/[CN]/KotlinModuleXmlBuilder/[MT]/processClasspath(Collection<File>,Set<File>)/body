{
  p.println("<!-- Classpath -->");
  for (  File file : files) {
    boolean isOutput=directoriesToFilterOut.contains(file) && !IncrementalCompilation.isEnabled();
    if (isOutput) {
      p.println("<!-- Output directory, commented out -->");
      p.println("<!-- ");
      p.pushIndent();
    }
    p.println("<",CLASSPATH," ",PATH,"=\"",getEscapedPath(file),"\"/>");
    if (isOutput) {
      p.popIndent();
      p.println("-->");
    }
  }
}
