{
  if (parent.getParent() instanceof KtIfExpression && ((KtIfExpression)parent.getParent()).getCondition() == place) {
    return true;
  }
 else   if (parent.getParent() instanceof KtLoopExpression && ((KtLoopExpression)parent.getParent()).getBody() != place) {
    return true;
  }
 else   if (parent.getParent() instanceof KtArrayAccessExpression) {
    return true;
  }
  return false;
}
