{
  if (constructor == null)   return false;
  if (constructor.getParent() instanceof PsiClass) {
    final PsiClass parent=(PsiClass)constructor.getParent();
    if (parent.getConstructors().length == 1)     return true;
 else {
      PsiMethod c=getPrimaryConstructor(parent);
      if (c != null && c.hashCode() == constructor.hashCode())       return true;
    }
  }
  return false;
}
