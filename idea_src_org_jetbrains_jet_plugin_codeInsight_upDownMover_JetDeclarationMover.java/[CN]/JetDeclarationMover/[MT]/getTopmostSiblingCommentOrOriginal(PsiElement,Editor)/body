{
  PsiElement element=originalElement;
  PsiElement sibling=element.getPrevSibling();
  while (sibling instanceof PsiComment || (sibling instanceof PsiWhiteSpace && getElementLineCount(sibling,editor) <= 1) || (sibling != null && (sibling.getText() == null || sibling.getText().isEmpty()))) {
    if (sibling instanceof PsiComment) {
      element=sibling;
    }
    sibling=sibling.getPrevSibling();
  }
  return element;
}
