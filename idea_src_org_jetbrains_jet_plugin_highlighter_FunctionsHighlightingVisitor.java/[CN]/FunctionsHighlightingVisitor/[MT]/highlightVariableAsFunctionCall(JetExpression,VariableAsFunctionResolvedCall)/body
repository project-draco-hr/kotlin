{
  VariableDescriptor variableDescriptor=resolvedCall.getVariableCall().getResultingDescriptor();
  String kind=variableDescriptor instanceof ValueParameterDescriptor ? "parameter" : variableDescriptor instanceof PropertyDescriptor ? "property" : "variable";
  if (containedInFunctionClassOrSubclass(resolvedCall.getFunctionCall().getResultingDescriptor())) {
    holder.createInfoAnnotation(callee,"Calling " + kind + " as function").setTextAttributes(JetHighlightingColors.VARIABLE_AS_FUNCTION_CALL);
  }
 else {
    holder.createInfoAnnotation(callee,"Calling " + kind + " as function-like").setTextAttributes(JetHighlightingColors.VARIABLE_AS_FUNCTION_LIKE_CALL);
  }
}
