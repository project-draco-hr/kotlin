{
  return new JetSingleIntentionActionFactory(){
    @Override public JetIntentionAction<PsiElement> createAction(    Diagnostic diagnostic){
      final JetProperty expression=QuickFixUtil.getParentElementOfType(diagnostic,JetProperty.class);
      if (expression == null)       return null;
      return new RemovePsiElementSimpleFix(expression,JetBundle.message("remove.variable.action",(expression.getName()))){
        @Override public void invoke(        @NotNull Project project,        Editor editor,        PsiFile file) throws IncorrectOperationException {
          JetExpression initializer=expression.getInitializer();
          if (initializer != null) {
            expression.replace(initializer);
          }
 else {
            expression.delete();
          }
        }
      }
;
    }
  }
;
}
