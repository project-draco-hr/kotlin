{
  return new ItemPresentation(){
    @Override @Nullable public String getPresentableText(){
      String name=((NavigationItem)myWrappee).getName();
      if (myDirName == null || myFileName == null) {
        return name;
      }
      return name + " (..." + File.separatorChar+ myDirName+ File.separatorChar+ myFileName+ ')';
    }
    @Override public String getLocationString(){
      return null;
    }
    @Override public Icon getIcon(    boolean open){
      return null;
    }
  }
;
}
