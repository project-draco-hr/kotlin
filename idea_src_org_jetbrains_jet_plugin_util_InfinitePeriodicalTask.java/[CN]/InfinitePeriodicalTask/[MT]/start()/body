{
  myUpdateAlarm.addRequest(new Runnable(){
    @Override public void run(){
      myUpdateAlarm.addRequest(this,delay);
      LongRunningReadTask task=taskProvider.compute();
      task.init();
      if (task.shouldStart(currentTask)) {
        currentTask=task;
        currentTask.run();
      }
    }
  }
,delay);
  return this;
}
