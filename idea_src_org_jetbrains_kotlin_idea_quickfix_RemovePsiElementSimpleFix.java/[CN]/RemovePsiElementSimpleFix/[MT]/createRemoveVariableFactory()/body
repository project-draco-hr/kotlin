{
  return new KotlinSingleIntentionActionFactory(){
    @Override public KotlinQuickFixAction<PsiElement> createAction(    Diagnostic diagnostic){
      final KtProperty expression=QuickFixUtil.getParentElementOfType(diagnostic,KtProperty.class);
      if (expression == null)       return null;
      return new RemovePsiElementSimpleFix(expression,KotlinBundle.message("remove.variable.action",(expression.getName()))){
        @Override public void invoke(        @NotNull Project project,        Editor editor,        KtFile file) throws IncorrectOperationException {
          KtExpression initializer=expression.getInitializer();
          if (initializer != null) {
            expression.replace(initializer);
          }
 else {
            expression.delete();
          }
        }
      }
;
    }
  }
;
}
