{
  return new KotlinSingleIntentionActionFactory(){
    @Override public KotlinQuickFixAction<PsiElement> createAction(    @NotNull Diagnostic diagnostic){
      KtImportDirective directive=QuickFixUtil.getParentElementOfType(diagnostic,KtImportDirective.class);
      if (directive == null)       return null;
 else {
        KtExpression exp=directive.getImportedReference();
        if (exp != null) {
          return new RemovePsiElementSimpleFix(directive,KotlinBundle.message("remove.conflicting.import",exp.getText()));
        }
        return new RemovePsiElementSimpleFix(directive,KotlinBundle.message("remove.conflicting.import",""));
      }
    }
  }
;
}
