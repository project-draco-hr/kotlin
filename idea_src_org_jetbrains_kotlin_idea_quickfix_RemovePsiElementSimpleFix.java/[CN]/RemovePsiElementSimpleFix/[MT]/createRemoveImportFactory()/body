{
  return new JetSingleIntentionActionFactory(){
    @Override public JetIntentionAction<PsiElement> createAction(    Diagnostic diagnostic){
      JetImportDirective directive=QuickFixUtil.getParentElementOfType(diagnostic,JetImportDirective.class);
      if (directive == null)       return null;
 else {
        JetExpression exp=directive.getImportedReference();
        if (exp != null) {
          return new RemovePsiElementSimpleFix(directive,JetBundle.message("remove.useless.import",exp.getText()));
        }
        return new RemovePsiElementSimpleFix(directive,JetBundle.message("remove.useless.import",""));
      }
    }
  }
;
}
