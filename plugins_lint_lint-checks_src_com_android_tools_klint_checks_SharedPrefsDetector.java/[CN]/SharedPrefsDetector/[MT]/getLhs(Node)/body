{
  while (node != null) {
    Class<? extends Node> type=node.getClass();
    if (type == MethodDeclaration.class || type == ConstructorDeclaration.class) {
      return null;
    }
    if (type == VariableDefinition.class) {
      return (VariableDefinition)node;
    }
    node=node.getParent();
  }
  return null;
}
