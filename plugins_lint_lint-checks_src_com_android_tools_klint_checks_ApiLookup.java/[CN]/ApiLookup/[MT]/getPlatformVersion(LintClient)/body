{
  LocalSdk sdk=client.getSdk();
  if (sdk != null) {
    LocalPkgInfo pkgInfo=sdk.getPkgInfo(PkgType.PKG_PLATFORM_TOOLS);
    if (pkgInfo != null) {
      FullRevision version=pkgInfo.getDesc().getFullRevision();
      if (version != null) {
        return version.toShortString();
      }
    }
  }
  return null;
}
