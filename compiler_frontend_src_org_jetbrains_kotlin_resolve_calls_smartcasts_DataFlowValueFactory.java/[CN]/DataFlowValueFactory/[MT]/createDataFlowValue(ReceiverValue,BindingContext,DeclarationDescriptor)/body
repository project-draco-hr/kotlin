{
  if (receiverValue instanceof TransientReceiver || receiverValue instanceof ScriptReceiver || receiverValue instanceof ClassReceiver|| receiverValue instanceof ExtensionReceiver) {
    return createDataFlowValueForStableReceiver(receiverValue);
  }
 else   if (receiverValue instanceof ExpressionReceiver) {
    return createDataFlowValue(((ExpressionReceiver)receiverValue).getExpression(),receiverValue.getType(),bindingContext,containingDeclarationOrModule);
  }
 else   if (receiverValue == ReceiverValue.NO_RECEIVER) {
    throw new IllegalArgumentException("No DataFlowValue exists for ReceiverValue.NO_RECEIVER");
  }
 else {
    throw new UnsupportedOperationException("Unsupported receiver value: " + receiverValue.getClass().getName());
  }
}
