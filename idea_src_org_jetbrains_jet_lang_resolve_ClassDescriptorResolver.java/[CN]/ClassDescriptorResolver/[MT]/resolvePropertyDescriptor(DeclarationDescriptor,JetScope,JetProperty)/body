{
  JetType type=getType(scope,property);
  boolean isVar=property.isVar();
  JetModifierList modifierList=property.getModifierList();
  PropertyDescriptor propertyDescriptor=new PropertyDescriptor(containingDeclaration,AttributeResolver.INSTANCE.resolveAttributes(modifierList),resolveModifiers(modifierList,DEFAULT_MODIFIERS),isVar,JetPsiUtil.safeName(property.getName()),isVar ? type : null,type);
  propertyDescriptor.initialize(resolvePropertyGetterDescriptor(scope,property,propertyDescriptor),resolvePropertySetterDescriptor(scope,property,propertyDescriptor));
  trace.recordDeclarationResolution(property,propertyDescriptor);
  return propertyDescriptor;
}
