{
  JetType type=getType(scope,property);
  VariableDescriptorImpl variableDescriptor=new LocalVariableDescriptor(containingDeclaration,AttributeResolver.INSTANCE.resolveAttributes(property.getModifierList()),JetPsiUtil.safeName(property.getName()),type,property.isVar());
  trace.recordDeclarationResolution(property,variableDescriptor);
  return variableDescriptor;
}
