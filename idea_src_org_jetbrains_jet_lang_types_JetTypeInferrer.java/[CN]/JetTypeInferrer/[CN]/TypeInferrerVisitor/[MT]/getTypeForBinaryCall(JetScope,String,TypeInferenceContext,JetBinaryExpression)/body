{
  JetType leftType=getType(binaryExpression.getLeft(),context.replaceScope(scope));
  FunctionDescriptor functionDescriptor=context.services.callResolver.resolveCallWithGivenName(context.trace,scope,CallMaker.makeCall(binaryExpression),binaryExpression.getOperationReference(),name,leftType,context.expectedType);
  if (functionDescriptor != null) {
    if (leftType != null && leftType.isNullable()) {
      JetExpression right=binaryExpression.getRight();
      String rightText=right == null ? "" : right.getText();
      String leftText=binaryExpression.getLeft().getText();
      context.trace.getErrorHandler().genericError(binaryExpression.getOperationReference().getNode(),"Infix call corresponds to a dot-qualified call '" + leftText + "."+ name+ "("+ rightText+ ")'"+ " which is not allowed on a nullable receiver '"+ leftText+ "'."+ " Use '?.'-qualified call instead");
    }
    return functionDescriptor.getReturnType();
  }
  return null;
}
