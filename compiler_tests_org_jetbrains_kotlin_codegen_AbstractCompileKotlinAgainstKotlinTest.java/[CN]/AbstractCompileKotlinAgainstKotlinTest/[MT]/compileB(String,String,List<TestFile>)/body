{
  CompilerConfiguration configurationWithADirInClasspath=KotlinTestUtils.compilerConfigurationForTests(ConfigurationKind.ALL,getJdkKind(files),KotlinTestUtils.getAnnotationsJar(),aDir);
  KotlinCoreEnvironment environment=KotlinCoreEnvironment.createForTests(getTestRootDisposable(),configurationWithADirInClasspath,EnvironmentConfigFiles.JVM_CONFIG_FILES);
  return compileKotlin(fileName,content,bDir,environment,getTestRootDisposable());
}
