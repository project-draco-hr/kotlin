{
  JetType type=descriptor.getType();
  if (descriptor instanceof ValueParameterDescriptor) {
    JetType varargElementType=((ValueParameterDescriptor)descriptor).getVarargElementType();
    if (varargElementType != null) {
      builder.append(renderKeyword("vararg")).append(" ");
      type=varargElementType;
    }
  }
  String typeString=renderPropertyPrefixAndComputeTypeString(builder,skipValVar ? null : descriptor.isVar(),Collections.<TypeParameterDescriptor>emptyList(),ReceiverParameterDescriptor.NO_RECEIVER_PARAMETER,type);
  renderName(descriptor,builder);
  builder.append(" : ").append(escape(typeString));
  return null;
}
