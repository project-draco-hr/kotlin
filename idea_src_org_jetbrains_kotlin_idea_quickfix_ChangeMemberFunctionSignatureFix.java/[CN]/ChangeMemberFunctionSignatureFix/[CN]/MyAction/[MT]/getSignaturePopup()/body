{
  return new BaseListPopupStep<FunctionDescriptor>(JetBundle.message("change.function.signature.chooser.title"),signatures){
    @Override public boolean isAutoSelectionEnabled(){
      return false;
    }
    @Override public PopupStep onChosen(    FunctionDescriptor selectedValue,    boolean finalChoice){
      if (finalChoice) {
        changeSignature(selectedValue);
      }
      return FINAL_CHOICE;
    }
    @Override public Icon getIconFor(    FunctionDescriptor aValue){
      return PlatformIcons.FUNCTION_ICON;
    }
    @NotNull @Override public String getTextFor(    FunctionDescriptor aValue){
      return SIGNATURE_PREVIEW_RENDERER.render(aValue);
    }
  }
;
}
