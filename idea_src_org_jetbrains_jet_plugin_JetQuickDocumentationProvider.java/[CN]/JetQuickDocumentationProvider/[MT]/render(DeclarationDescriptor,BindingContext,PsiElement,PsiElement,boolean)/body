{
  String renderedDecl=DescriptorRenderer.HTML.render(declarationDescriptor);
  if (isKotlinDeclaration(declarationDescriptor,bindingContext)) {
    return renderedDecl;
  }
 else {
    if (mergeKotlinAndJava) {
      return renderedDecl + "\nOriginal: " + XmlStringUtil.escapeString(new JavaDocumentationProvider().getQuickNavigateInfo(element,originalElement));
    }
 else {
      return null;
    }
  }
}
