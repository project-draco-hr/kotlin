{
  JetCallableDeclaration declaration=getTarget(editor,file);
  if (declaration instanceof JetProperty) {
    if (((JetProperty)declaration).getInitializer() != null)     return false;
  }
  return declaration != null && declaration.getParent() instanceof JetClassBody && declaration.getParent().getParent() instanceof JetClass && declaration.getReceiverTypeRef() == null;
}
