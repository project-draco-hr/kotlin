{
  error[0]=false;
  if (KtPsiUtil.isBackingFieldReference(element,null)) {
    return true;
  }
  if (element instanceof KtDotQualifiedExpression && isCorrectBackingFieldReference(((KtDotQualifiedExpression)element).getSelectorExpression(),ctxt,error,false)) {
    if (((KtDotQualifiedExpression)element).getReceiverExpression() instanceof KtThisExpression) {
      return true;
    }
    error[0]=true;
    if (reportError) {
      report(Errors.INACCESSIBLE_BACKING_FIELD.on(element),ctxt);
    }
  }
  return false;
}
