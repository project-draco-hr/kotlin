{
  error[0]=false;
  if (JetPsiUtil.isBackingFieldReference(element,null)) {
    return true;
  }
  if (element instanceof JetDotQualifiedExpression && isCorrectBackingFieldReference(((JetDotQualifiedExpression)element).getSelectorExpression(),ctxt,error,false)) {
    if (((JetDotQualifiedExpression)element).getReceiverExpression() instanceof JetThisExpression) {
      return true;
    }
    error[0]=true;
    if (reportError) {
      report(Errors.INACCESSIBLE_BACKING_FIELD.on(element),ctxt);
    }
  }
  return false;
}
