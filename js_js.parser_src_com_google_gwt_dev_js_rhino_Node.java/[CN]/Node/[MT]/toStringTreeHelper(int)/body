{
  if (Context.printTrees) {
    StringBuffer s=new StringBuffer();
    for (int i=0; i < level; i++) {
      s.append("    ");
    }
    s.append(toString());
    s.append('\n');
    for (Node cursor=getFirstChild(); cursor != null; cursor=cursor.getNext()) {
      Node n=cursor;
      s.append(n.toStringTreeHelper(level + 1));
    }
    return s.toString();
  }
  return "";
}
