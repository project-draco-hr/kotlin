{
  if (seq == null)   return;
  for (int i=0; i < seq.length(); i++) {
    char c=seq.charAt(i);
switch (c) {
case '<':
      builder.append("&lt;");
    break;
case '>':
  builder.append("&gt;");
break;
case '&':
builder.append("&amp;");
break;
case '"':
builder.append("&quot;");
break;
default :
builder.append(c);
}
}
}
