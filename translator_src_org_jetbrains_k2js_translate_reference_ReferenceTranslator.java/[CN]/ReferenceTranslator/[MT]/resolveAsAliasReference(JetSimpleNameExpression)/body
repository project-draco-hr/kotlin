{
  DeclarationDescriptor referencedDescriptor=BindingUtils.getDescriptorForReferenceExpression(context().bindingContext(),expression);
  if (referencedDescriptor == null)   return null;
  JetDeclaration declaration=BindingUtils.getDeclarationForDescriptor(context().bindingContext(),referencedDescriptor);
  if (declaration == null)   return null;
  JsName alias=context().aliases().get(declaration);
  if (alias == null)   return null;
  return alias.makeRef();
}
