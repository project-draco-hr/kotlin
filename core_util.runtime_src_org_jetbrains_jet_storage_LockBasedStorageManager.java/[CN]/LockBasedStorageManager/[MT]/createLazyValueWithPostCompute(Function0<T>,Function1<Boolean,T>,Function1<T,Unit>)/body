{
  return new LockBasedNotNullLazyValue<T>(lock,computable){
    @Nullable @Override protected T recursionDetected(    boolean firstTime){
      if (onRecursiveCall == null) {
        return super.recursionDetected(firstTime);
      }
      return onRecursiveCall.invoke(firstTime);
    }
    @Override protected void postCompute(    @NotNull T value){
      postCompute.invoke(value);
    }
  }
;
}
