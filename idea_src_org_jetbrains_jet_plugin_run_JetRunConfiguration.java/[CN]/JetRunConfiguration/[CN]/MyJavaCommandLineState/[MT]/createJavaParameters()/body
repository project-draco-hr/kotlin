{
  final JavaParameters params=new JavaParameters();
  final RunConfigurationModule module=myConfiguration.getConfigurationModule();
  final int classPathType=JavaParametersUtil.getClasspathType(module,myConfiguration.settings().getMainClassName(),false);
  final String jreHome=myConfiguration.ALTERNATIVE_JRE_PATH_ENABLED ? myConfiguration.ALTERNATIVE_JRE_PATH : null;
  JavaParametersUtil.configureModule(module,params,classPathType,jreHome);
  JavaParametersUtil.configureConfiguration(params,myConfiguration);
  params.setMainClass(myConfiguration.settings().getMainClassName());
  return params;
}
