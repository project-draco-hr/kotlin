{
  if (!ctxt.enterInitState.isDeclared() && !ctxt.exitInitState.isDeclared() && !ctxt.enterInitState.mayBeInitialized()&& ctxt.exitInitState.mayBeInitialized()) {
    report(Errors.INITIALIZATION_BEFORE_DECLARATION.on(expression,ctxt.variableDescriptor),ctxt);
    return true;
  }
  return false;
}
