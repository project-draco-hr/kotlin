{
  StringBuilder sb=new StringBuilder();
  ClassifierDescriptor cd=type.getConstructor().getDeclarationDescriptor();
  sb.append(cd == null || cd instanceof TypeParameterDescriptor ? type.getConstructor() : DescriptorUtils.getFQName(cd));
  if (!type.getArguments().isEmpty()) {
    sb.append("<");
    appendTypeProjections(sb,type.getArguments());
    sb.append(">");
  }
  if (type.isNullable()) {
    sb.append("?");
  }
  return sb.toString();
}
