{
  boolean isExtensionProperty=propertyDescriptor.getExtensionReceiverParameter() != null;
  DeclarationDescriptor propertyContainer=propertyDescriptor.getContainingDeclaration();
  return !propertyDescriptor.isVar() && !isExtensionProperty && isCompanionObject(propertyContainer)&& isInterface(propertyContainer.getContainingDeclaration())&& areBothAccessorDefault(propertyDescriptor)&& getVisibilityForSpecialPropertyBackingField(propertyDescriptor,false) == ACC_PUBLIC;
}
