{
  super(state,null);
  checkAllFilesHaveSameNamespace(namespaceFiles);
  this.v=v;
  name=fqName;
  this.files=namespaceFiles;
  final PsiFile sourceFile=namespaceFiles.size() == 1 ? namespaceFiles.iterator().next().getContainingFile() : null;
  v.addOptionalDeclaration(new ClassBuilderOnDemand.ClassBuilderCallback(){
    @Override public void doSomething(    @NotNull ClassBuilder v){
      v.defineClass(sourceFile,V1_6,ACC_PUBLIC | ACC_FINAL,getJVMClassNameForKotlinNs(fqName).getInternalName(),null,"java/lang/Object",new String[0]);
      if (sourceFile != null) {
        v.visitSource(sourceFile.getName(),null);
      }
    }
  }
);
}
