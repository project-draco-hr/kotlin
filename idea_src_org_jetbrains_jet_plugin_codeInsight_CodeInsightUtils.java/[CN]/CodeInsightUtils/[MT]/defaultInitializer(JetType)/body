{
  KotlinBuiltIns builtIns=KotlinBuiltIns.getInstance();
  if (type.isNullable()) {
    return "null";
  }
 else   if (type.equals(builtIns.getIntType()) || type.equals(builtIns.getLongType()) || type.equals(builtIns.getShortType())|| type.equals(builtIns.getByteType())|| type.equals(builtIns.getFloatType())|| type.equals(builtIns.getDoubleType())|| type.equals(builtIns.getCharType())) {
    return "0";
  }
 else   if (type.equals(builtIns.getBooleanType())) {
    return "false";
  }
  return null;
}
