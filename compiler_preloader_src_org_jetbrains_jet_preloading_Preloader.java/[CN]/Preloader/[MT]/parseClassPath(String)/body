{
  String[] paths=classpath.split("\\" + File.pathSeparator);
  List<File> files=new ArrayList<File>(paths.length);
  for (  String path : paths) {
    File file=new File(path);
    if (!file.exists()) {
      System.out.println("File does not exist: " + file);
      printUsageAndExit();
    }
    files.add(file);
  }
  return files;
}
