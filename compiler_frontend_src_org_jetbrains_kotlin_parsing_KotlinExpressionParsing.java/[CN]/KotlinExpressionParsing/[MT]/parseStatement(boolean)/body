{
  if (!parseLocalDeclaration()) {
    if (!atSet(EXPRESSION_FIRST)) {
      errorAndAdvance("Expecting a statement");
    }
 else     if (isScriptTopLevel) {
      PsiBuilder.Marker scriptInitializer=mark();
      parseExpression();
      scriptInitializer.done(ANONYMOUS_INITIALIZER);
    }
 else {
      parseExpression();
    }
  }
}
