{
  List<File> filesWithAuthorJavadoc=filterSourceFiles(new Function1<String,Boolean>(){
    @Override public Boolean invoke(    String source){
      return source.contains("@author") && AUTHOR_JAVADOC_PATTERN.matcher(source).find();
    }
  }
);
  if (!filesWithAuthorJavadoc.isEmpty()) {
    fail(String.format("%d source files contain @author javadoc tag. Please remove them or exclude in this test:\n%s",filesWithAuthorJavadoc.size(),StringUtil.join(filesWithAuthorJavadoc,"\n")));
  }
}
