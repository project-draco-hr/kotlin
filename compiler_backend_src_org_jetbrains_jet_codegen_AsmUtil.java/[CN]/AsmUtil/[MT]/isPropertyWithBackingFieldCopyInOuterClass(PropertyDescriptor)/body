{
  boolean isExtensionProperty=propertyDescriptor.getReceiverParameter() != null;
  DeclarationDescriptor propertyContainer=propertyDescriptor.getContainingDeclaration();
  return !propertyDescriptor.isVar() && !isExtensionProperty && isClassObject(propertyContainer)&& isTrait(propertyContainer.getContainingDeclaration())&& areBothAccessorDefault(propertyDescriptor)&& getVisibilityForSpecialPropertyBackingField(propertyDescriptor,false) == ACC_PUBLIC;
}
