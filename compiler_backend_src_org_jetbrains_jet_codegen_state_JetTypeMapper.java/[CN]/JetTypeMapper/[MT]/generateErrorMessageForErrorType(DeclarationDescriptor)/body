{
  PsiElement declarationElement=BindingContextUtils.descriptorToDeclaration(bindingContext,descriptor);
  PsiElement parentDeclarationElement=null;
  if (declarationElement != null) {
    DeclarationDescriptor containingDeclaration=descriptor.getContainingDeclaration();
    if (containingDeclaration != null) {
      parentDeclarationElement=BindingContextUtils.descriptorToDeclaration(bindingContext,containingDeclaration);
    }
  }
  return String.format("Error types are not allowed when classBuilderMode = %s. For declaration %s:%s in %s:%s",classBuilderMode,declarationElement,declarationElement != null ? declarationElement.getText() : "null",parentDeclarationElement,parentDeclarationElement != null ? parentDeclarationElement.getText() : "null");
}
