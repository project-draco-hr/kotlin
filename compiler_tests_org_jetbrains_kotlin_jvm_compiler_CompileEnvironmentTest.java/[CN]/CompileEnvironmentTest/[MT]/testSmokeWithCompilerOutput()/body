{
  File tempDir=FileUtil.createTempDirectory("compilerTest","compilerTest");
  try {
    File out=new File(tempDir,"out");
    File stdlib=ForTestCompileRuntime.runtimeJarForTests();
    ExitCode exitCode=new K2JVMCompiler().exec(System.out,JetTestUtils.getTestDataPathBase() + "/compiler/smoke/Smoke.kt","-d",out.getAbsolutePath(),"-no-stdlib","-classpath",stdlib.getAbsolutePath());
    Assert.assertEquals(ExitCode.OK,exitCode);
    File[] files=out.listFiles();
    Arrays.sort(files);
    assertEquals(2,files.length);
    assertEquals(1,files[0].listFiles().length);
    assertEquals(1,files[1].listFiles().length);
  }
  finally {
    FileUtil.delete(tempDir);
  }
}
