{
  if (descriptor instanceof LocalVariableDescriptor) {
    LocalVariableDescriptor variableDescriptor=(LocalVariableDescriptor)descriptor;
    if (Boolean.TRUE.equals(bindingContext.get(MUST_BE_WRAPPED_IN_A_REF,variableDescriptor))) {
      holder.createInfoAnnotation(elementToHighlight,"Wrapped into a ref-object to be modifier when captured in a closure").setTextAttributes(JetHighlightingColors.WRAPPED_INTO_REF);
    }
    holder.createInfoAnnotation(elementToHighlight,null).setTextAttributes(variableDescriptor.isVar() ? JetHighlightingColors.LOCAL_VAR : JetHighlightingColors.LOCAL_VAL);
  }
}
