{
  JetType autoCast=bindingContext.get(AUTOCAST,expression);
  if (autoCast != null) {
    holder.createInfoAnnotation(expression,"Automatically cast to " + DescriptorRenderer.FQNAMES_IN_TYPES.renderType(autoCast)).setTextAttributes(JetHighlightingColors.AUTO_CASTED_VALUE);
  }
  super.visitExpression(expression);
}
