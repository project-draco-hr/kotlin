{
  return new StatementContext(){
    @NotNull @Override public JsContext getCurrentStatementContext(){
      return getLastStatementLevelContext();
    }
    @NotNull @Override protected JsStatement getEmptyStatement(){
      return getFunctionContext().getEmpty();
    }
    @Override public void shiftCurrentStatementForward(){
      super.shiftCurrentStatementForward();
      lastStatementWasShifted=true;
    }
  }
;
}
