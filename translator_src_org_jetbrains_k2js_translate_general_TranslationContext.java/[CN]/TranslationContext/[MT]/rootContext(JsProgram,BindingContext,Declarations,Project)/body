{
  JsScope rootScope=program.getRootScope();
  Scopes scopes=new Scopes(rootScope,rootScope,rootScope);
  Namer namer=Namer.newInstance(rootScope);
  Aliaser aliaser=Aliaser.aliasesForStandardClasses(JetStandardLibrary.getJetStandardLibrary(project),namer);
  return new TranslationContext(program,bindingContext,scopes,extractor,aliaser,namer);
}
