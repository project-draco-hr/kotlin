{
  if (root instanceof JetIfExpression) {
    JetIfExpression ifExpression=(JetIfExpression)root;
    return checkFoldableIfExpressionWithAssignments(ifExpression) || checkFoldableIfExpressionWithReturns(ifExpression) || checkFoldableIfExpressionWithAsymmetricReturns(ifExpression);
  }
  if (root instanceof JetWhenExpression) {
    JetWhenExpression whenExpression=(JetWhenExpression)root;
    return checkFoldableWhenExpressionWithAssignments(whenExpression) || checkFoldableWhenExpressionWithReturns(whenExpression);
  }
  return false;
}
