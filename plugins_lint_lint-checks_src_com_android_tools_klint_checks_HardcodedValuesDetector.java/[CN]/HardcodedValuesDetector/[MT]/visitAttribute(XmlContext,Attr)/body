{
  String value=attribute.getValue();
  if (!value.isEmpty() && (value.charAt(0) != '@' && value.charAt(0) != '?')) {
    if (!ANDROID_URI.equals(attribute.getNamespaceURI())) {
      return;
    }
    context.report(ISSUE,attribute,context.getLocation(attribute),String.format("[I18N] Hardcoded string \"%1$s\", should use `@string` resource",value));
  }
}
