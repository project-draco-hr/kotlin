{
  if (myEnvironment != null) {
    throw new IllegalStateException("must not set up myEnvironment twice");
  }
  CompilerConfiguration configuration=createCompilerConfigurationForTests(configurationKind,TestJdkKind.MOCK_JDK,Collections.singletonList(getAnnotationsJar()),ArraysKt.filterNotNull(javaSourceRoots),testFilesWithConfigurationDirectives);
  myEnvironment=KotlinCoreEnvironment.createForTests(getTestRootDisposable(),configuration,EnvironmentConfigFiles.JVM_CONFIG_FILES);
}
