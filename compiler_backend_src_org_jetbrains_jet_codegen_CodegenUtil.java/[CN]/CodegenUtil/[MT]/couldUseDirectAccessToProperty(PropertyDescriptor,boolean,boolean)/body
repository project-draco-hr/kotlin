{
  PropertyAccessorDescriptor accessorDescriptor=forGetter ? propertyDescriptor.getGetter() : propertyDescriptor.getSetter();
  boolean isExtensionProperty=propertyDescriptor.getReceiverParameter() != null;
  return isInsideClass && !isExtensionProperty && (accessorDescriptor == null || accessorDescriptor.isDefault() && (!DescriptorUtils.isExternallyAccessible(propertyDescriptor) || accessorDescriptor.getModality() == Modality.FINAL));
}
