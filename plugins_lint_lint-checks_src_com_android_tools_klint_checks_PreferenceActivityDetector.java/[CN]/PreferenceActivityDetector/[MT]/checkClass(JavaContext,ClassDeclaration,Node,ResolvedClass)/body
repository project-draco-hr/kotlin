{
  if (!context.getProject().getReportIssues()) {
    return;
  }
  String className=resolvedClass.getName();
  if (resolvedClass.isSubclassOf(PREFERENCE_ACTIVITY,false) && mExportedActivities.containsKey(className)) {
    if (context.getMainProject().getTargetSdk() >= 19 && overridesIsValidFragment(resolvedClass)) {
      return;
    }
    String message=String.format("`PreferenceActivity` subclass `%1$s` should not be exported",className);
    context.report(ISSUE,mExportedActivities.get(className).resolve(),message);
  }
}
