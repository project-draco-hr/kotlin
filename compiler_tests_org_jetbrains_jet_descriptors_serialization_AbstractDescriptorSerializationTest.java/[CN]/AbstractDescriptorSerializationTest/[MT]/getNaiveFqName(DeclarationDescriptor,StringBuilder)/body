{
  DeclarationDescriptor containingDeclaration=descriptor.getContainingDeclaration();
  if (containingDeclaration instanceof ClassDescriptor || (containingDeclaration instanceof NamespaceDescriptor && !DescriptorUtils.isRootNamespace((NamespaceDescriptor)containingDeclaration))) {
    getNaiveFqName(containingDeclaration,builder);
    builder.append(".");
  }
  builder.append(descriptor.getName().asString());
  return builder;
}
