{
  JetCallableDeclaration declaration=getTarget(editor,file);
  if (declaration instanceof JetProperty) {
    if (((JetProperty)declaration).hasInitializer())     return false;
  }
  return declaration != null && !(declaration instanceof JetSecondaryConstructor) && declaration.getParent() instanceof JetClassBody && declaration.getParent().getParent() instanceof JetClass && declaration.getReceiverTypeReference() == null;
}
