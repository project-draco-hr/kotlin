{
  ExpressionReceiver receiver=safeGetExpressionReceiver(binaryExpression.getLeft(),context.replaceScope(scope));
  FunctionDescriptor functionDescriptor=context.replaceScope(scope).resolveCallWithGivenName(CallMaker.makeCall(receiver,binaryExpression),binaryExpression.getOperationReference(),name,receiver);
  if (functionDescriptor != null) {
    return functionDescriptor.getReturnType();
  }
  return null;
}
