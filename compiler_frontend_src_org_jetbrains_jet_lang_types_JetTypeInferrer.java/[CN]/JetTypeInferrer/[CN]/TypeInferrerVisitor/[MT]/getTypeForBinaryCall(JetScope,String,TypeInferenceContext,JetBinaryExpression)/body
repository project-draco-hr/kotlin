{
  JetType leftType=getType(binaryExpression.getLeft(),context.replaceScope(scope));
  FunctionDescriptor functionDescriptor=callResolver.resolveCallWithGivenName(context.trace,scope,CallMaker.makeCall(binaryExpression),binaryExpression.getOperationReference(),name,leftType,context.expectedType);
  if (functionDescriptor != null) {
    if (leftType != null && leftType.isNullable()) {
      JetExpression right=binaryExpression.getRight();
      String rightText=right == null ? "" : right.getText();
      String leftText=binaryExpression.getLeft().getText();
      context.trace.report(UNSAFE_INFIX_CALL.on(binaryExpression.getOperationReference(),leftText,name,rightText));
    }
    return functionDescriptor.getReturnType();
  }
  return null;
}
