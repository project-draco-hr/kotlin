{
  if (element == null)   return null;
  if (strict) {
    element=element.getParent();
  }
  while (element != null) {
    if (aClass.isInstance(element) && predicate.apply(element)) {
      return element;
    }
    if (element instanceof PsiFile)     return null;
    element=element.getParent();
  }
  return null;
}
