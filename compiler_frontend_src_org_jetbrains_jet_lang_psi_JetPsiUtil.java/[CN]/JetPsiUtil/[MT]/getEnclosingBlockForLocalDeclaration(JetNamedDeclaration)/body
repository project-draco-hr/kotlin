{
  JetDeclaration container=PsiTreeUtil.getParentOfType(declaration,JetNamedFunction.class,JetPropertyAccessor.class,JetClassInitializer.class);
  if (container == null)   return null;
  return (container instanceof JetClassInitializer) ? ((JetClassInitializer)container).getBody() : ((JetDeclarationWithBody)container).getBodyExpression();
}
