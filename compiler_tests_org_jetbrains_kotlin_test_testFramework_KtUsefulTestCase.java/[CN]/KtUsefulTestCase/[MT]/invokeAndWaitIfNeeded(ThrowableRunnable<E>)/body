{
  if (SwingUtilities.isEventDispatchThread()) {
    runnable.run();
  }
 else {
    final Ref ref=Ref.create();
    SwingUtilities.invokeAndWait(new Runnable(){
      public void run(){
        try {
          runnable.run();
        }
 catch (        Exception var2) {
          ref.set(var2);
        }
      }
    }
);
    if (!ref.isNull()) {
      throw (Exception)ref.get();
    }
  }
}
